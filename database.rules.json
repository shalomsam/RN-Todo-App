{
    "rules": {
        "admin": {
            "$uid": {
                ".read": "false"
            }
        },
        "users": {
            "$uid": {
                ".read": "auth != null",
                ".write": "(auth != null && auth.uid == $uid)",
                ".validate": "newData.hasChildren(['uid', 'name', 'email'])",
                "uid": {
                    ".validate": "newData.isString()"
                },
                "name": {
                    ".validate": "newData.isString()"
                },
                "email": {
                    ".validate": "newData.isString()"
                },
                "lists": {
                    ".validate": "newData.val() == null || newData.exists()"
                },
                "$other": {
                    ".validate": "false"
                }
            }
        },
        "lists": {
            "$listId": {
                ".validate": "newData.hasChildren(['key', 'name', 'owner', 'userEmails'])",
                "key": {
                    ".validate": "newData.isString()"
                },
                "name": {
                    ".validate": "newData.isString()"
                },
                "owner": {
                    ".validate": "newData.isString()"
                },
                "userEmails": {
                    ".validate": "newData.hasChildren()"
                },
                "todos": {
                    ".validate": "newData.hasChildren()",
                    ".read": "root.child('users').child(auth.uid).child('lists').child($listId).exists()",
                    ".write": "root.child('users').child(auth.uid).child('lists').child($listId).exists()",
                    "$todoId": {
                        ".validate": "newData.hasChildren([])",
                        "key": {
                            ".validate": "newData.isString()"
                        },
                        "title": {
                            ".validate": "newData.isString()"
                        },
                        "completed": {
                            ".validate": "newData.isBoolean()"
                        },
                        "notes": {
                            ".validate": "newData.isString()"
                        },
                        "remindMe": {
                            ".validate": "newData.isBoolean()"
                        },
                        "createdOn": {
                            ".validate": "newData.isNumber()"
                        },
                        "completedOn": {
                            ".validate": "newData.isNumber()"
                        },
                        "dueDate": {
                            ".validate": "newData.isNumber()"
                        },
                        "$other": {
                            ".validate": "false"
                        }
                    }
                },
                "$other": {
                    ".validate": "false"
                },
                ".read": "root.child('users').child(auth.uid).child('lists').child($listId).exists()",
                ".write": "root.child('users').child(auth.uid).child('lists').child($listId).exists()"
            }
        }
    }
}